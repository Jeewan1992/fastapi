{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "sleepApplication": false
  },
  "envVars": {
    "VOYAGE_API_KEY": {
      "required": true,
      "description": "Your Voyage AI API key"
    }
  }
}
